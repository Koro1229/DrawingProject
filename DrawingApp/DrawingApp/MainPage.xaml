<Page
    Width="1366" 
    Height="768"
    x:Class="DrawingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrawingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light" Margin="0,0,0,0" Width="1366" Height="768">
        <Button x:Name="_rectangle" Content="Rectangle" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="99,48,1069,0" Click="HandleRectangleButtonClick" />
        <Button x:Name="_ellipse" Content="Ellipse" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="585,48,585,0" Click="HandleEllipseButtonClick" />
        <Button x:Name="_clear" Content="Clear" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="1069,48,99,0" Click="HandleClearButtonClick" />
        <Canvas x:Name="_canvas" Margin="99,138,99,99" Background="#FFFFFFA0" PointerPressed="HandleCanvasPressed" PointerReleased="HandleCanvasReleased" PointerMoved="HandleCanvasMoved"/>
    </Grid>
</Page>
